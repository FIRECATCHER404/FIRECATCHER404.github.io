{
  "rules": {
    ".read": false,
    ".write": false,
    "count": {
      ".read": true,
      ".write": true,
      ".validate": "newData.isNumber()"
    },
    "retro": {
      ".read": true,
      ".write": true
    },
    "users": {
      ".read": true,
      ".write": true
    },
    "messages": {
      ".read": true,
      ".write": true
    },
    "groups": {
      ".read": true,
      ".write": true
    },
    "waiting": {
      ".read": true,
      ".write": true
    },
    "games": {
      ".read": true,
      ".write": true
    },
    "posts": {
      ".read": "(query.orderByChild === 'published' && query.equalTo === true) || (auth != null && auth.token.admin === true)",
      ".indexOn": ["published"],
      "$postId": {
        ".write": false
      }
    }
  }
}
